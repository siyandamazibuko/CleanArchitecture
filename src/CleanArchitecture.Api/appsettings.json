{
  "UseInMemoryDatabase": false,

  "ConnectionStrings": {
    "CleanArchitectureDbConnection": "Host=localhost;Database=clean.architecture.local;Username=postgres;password=postgres;CommandTimeout=300"
  },


  "Swagger": {
    "Title": "CleanArchitecture.Api",
    "Description": "CleanArchitecture API",
    "AuthMethod": "Bearer",
    "UseBearerToken": false
  },
  

  "Serilog": {
    "Using": [
      "Cib.Markets.Core.Serilog",
      "Cib.Markets.Core.Serilog.Sinks.Fluentd",
      "Cib.Markets.Core.Serilog.Enrichers.Correlation"
    ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Hangfire": "Information",
        "IdentityModel": "Warning",
        "IdentityServer4": "Warning",
        "Microsoft": "Error",
        "System": "Warning",
        "WorkflowCore": "Information"
      }
    },
    "Enrich": [
      {
        "Name": "WithThreadId"
      },
      {
        "Name": "WithEnvironment",
        "Args": {
          "environmentVariable": "ASPNETCORE_ENVIRONMENT"
        }
      },
      {
        "Name": "WithCorrelation",
        "Args": {
          "contextAccessor": "Cib.Markets.Core.Correlation.Context.CorrelationContextAccessor, Cib.Markets.Core.Correlation, Version=2.0.0.0, Culture=neutral, PublicKeyToken=null"
        }
      }
    ],
    "WriteTo": [
      {
        "Name": "Fluentd",
        "Args": {
          "host": "fluentd",
          "port": 24224,
          "tag": "app.log",
          "restrictedToMinimumLevel": "Verbose"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Level:w4}: [{TraceId}] {SourceContext}{NewLine}{Message}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Verbose"
        }
      }
    ],
    "Properties": {
      "Application": "rtcb-payments-api",
      "Email": "kyle.isaacs@absa.africa",
      "Snow": "BSN0015241"
    }
  }
}